{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@containers/*": [
        "src/containers/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@state/*": [
        "src/state/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    },
    "plugins": [
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "types": [
      "@nervosnetwork/ckb-types",
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts*",
    "src/**/*.stories.ts*"
  ]
}