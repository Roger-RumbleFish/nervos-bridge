{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "module": "commonjs",
    "target": "ES2020",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@contracts/*": [
        "src/contracts/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@config": [
        "src/config.ts"
      ],
    },
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ],
    "types": [
      "@nervosnetwork/ckb-types",
      "jest",
      "node"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts*",
    "src/**/*.stories.ts*"
  ]
}